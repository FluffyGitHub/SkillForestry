#input {
    align-items: center;
}

#output {
    align-items: center;
}

#selection-border {
    border-left-color: rgb(28, 208, 255);
    border-right-color: rgb(28, 208, 255);
    border-top-color: rgb(28, 208, 255);
    border-bottom-color: rgb(28, 208, 255);
    border-left-width: 0;
    border-right-width: 0;
    border-top-width: 0;
    border-bottom-width: 0;
    border-top-left-radius: 5px;
    border-bottom-left-radius: 5px;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
}

:hover > #selection-border {
    border-left-width: 1px;
    border-right-width: 1px;
    border-top-width: 1px;
    border-bottom-width: 1px;
}

:selected > #selection-border {
    border-left-width: 1px;
    border-right-width: 1px;
    border-top-width: 1px;
    border-bottom-width: 1px;
}

:hover:selected > #selection-border {
    border-left-width: 2px;
    border-right-width: 2px;
    border-top-width: 2px;
    border-bottom-width: 2px;
}

.node {
    min-width: 200px;
    margin-left: 0;
    margin-right: 0;
    margin-top: 0;
    margin-bottom: 0;
}

#title {
    -unity-font-style: bold;
    font-size: 14px;
    -unity-text-align: upper-center;
}

#divider {
    min-width: auto;
    background-color: rgb(82, 82, 82);
    min-height: 1px;
}

.basic #input {
    background-color: rgb(112, 161, 255);
}

.level #input {
    background-color: rgb(55, 66, 250);
}

.basic #output {
    background-color: rgb(164, 176, 190);
}

.level #output {
    background-color: rgb(164, 176, 190);
}

#description {
    white-space: normal;
    max-width: 150px;
}

.basic #levelContainer {
    display: none;
}

#requirement {
    -unity-font-style: bold;
    -unity-text-outline-width: 0;
    color: rgb(0, 0, 0);
    -unity-text-outline-color: rgb(0, 0, 0);
}

.locked #learnButton {
    background-color: rgb(255, 71, 87);
}

.locked #forgetButton {
    background-color: rgb(255, 71, 87);
}

.unlocked #learnButton {
    background-color: rgb(255, 71, 87);
}

.unlocked #forgetButton {
    background-color: rgb(46, 213, 115);
}

.available #learnButton {
    background-color: rgb(46, 213, 115);
}

.available #forgetButton {
    background-color: rgb(255, 71, 87);
}

.leveling #learnButton {
    background-color: rgb(46, 213, 115);
}

.leveling #forgetButton {
    background-color: rgb(46, 213, 115);
}

.unlocked #title {
    background-color: rgb(123, 237, 159);
}

.leveling #title {
    background-color: rgb(123, 237, 159);
}

#node-border {
    background-color: rgb(241, 242, 246);
}
